<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="daily_exam_tree_view">
        <field name="name">Custom Access list</field>
        <field name="model">daily.exam</field>
        <field name="arch" type="xml">
            <tree>
                <field name="course_id"/>
                <field name="standard_id"/>
                <field name="division_id"/>
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="daily_exam_form_view" model="ir.ui.view">
        <field name="name">Daily Exam form</field>
        <field name="model">daily.exam</field>
        <field name="arch" type="xml">
            <form string="Daily Exam">
                <header>
                    <button class="oe_highlight" groups="" name="action_set_draft" states="validate" string="Set To Draft" type="object" />
                    <button class="oe_highlight" groups="" name="action_validate"  string="Validate" type="object" states="draft"/>
                    <button class="oe_highlight" groups="" name="action_confirm" states="validate" string="Confirm" type="object" />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="course_id" attrs="{'readonly': [('state', 'in', ['generate'])]}" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1"/>
                            <field name="standard_id" domain="[('course_id','=',course_id)]" attrs="{'readonly': [('state', 'in', ['generate'])]}"  options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1"/>
                            <field name="division_id"  domain="[('standard_id','=',standard_id)]" attrs="{'readonly': [('state', 'in', ['generate'])]}"  options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1"/>
                            <field name="subject_id"  domain="[('course_id','=',course_id)]" attrs="{'readonly': [('state', 'in', ['generate'])]}"  options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1"/>
                            <field name="faculty_id" attrs="{'readonly': [('state', 'in', ['generate'])]}"  options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1"/>
                        </group>
                        <group>
                            <field name="tag" attrs="{'readonly': [('state', 'in', ['generate'])]}" required="1"/>
                            <field name="total_mark" attrs="{'readonly': [('state', 'in', ['generate'])]}" required="1"/>
                            <field name="pass_mark" attrs="{'readonly': [('state', 'in', ['generate'])]}" />
                            <field name="description" attrs="{'readonly': [('state', 'in', ['generate'])]}"/>
                            <field name="date" attrs="{'readonly': [('state', 'in', ['generate'])]}" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="attendees" string="Students">
                            <separator colspan="4" string="Student Details" />
                            <field  colspan="4" name="student_detail_id" nolabel="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'readonly':[('state','=','generate')]}">
                                <tree create="0" editable="bottom" string="Student Details" >
                                    <field name="course_id" invisible="1" />
                                    <field name="standard_id" invisible="1" />
                                    <field name="division_id" invisible="1" />
                                    <field name="student_id"/>
                                    <field name="admission_no" style="text-align:center;"/>
                                    <field name="status" style="text-align:center;"/>
                                    <field name="mark_obtained"/>
                                    <field name="feed_back"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="menu_custom_daily_exams" model="ir.actions.act_window">
        <field name="name">Daily Exam Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">daily.exam</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>