<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ss_student_form_inherit_daily_exam" model="ir.ui.view">
        <field name="name">ss.student.inherit.daily.exam</field>
        <field name="model">ss.student</field>
        <field name="inherit_id" ref="smartschool_base.view_ss_student_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='personal']" position="after">
                <page string="Daily Exam Results">
                    <field name="daily_line_ids">
                        <tree>
                            <field name="date"/>
                            <field name="subject_id"/>
                            <field name="status"/>
                            <field name="total_mark" style="text-align:center;"/>
                            <field name="mark_obtained" style="text-align:center;"/>
                            <field name="tag"/>
                            <field name="faculty_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>