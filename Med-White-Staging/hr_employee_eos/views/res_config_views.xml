<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_hee" model="ir.ui.view">
        <field name="name">res.config.settings.hr.inherit.hee</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']//div[hasclass('o_settings_container')]" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="auto_allocate_eos"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="auto_allocate_eos"/>
                        <div class="text-muted">
                            It will auto allocate eos to employee each month. <br/>
                            No need for payslip to allocate eos.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
