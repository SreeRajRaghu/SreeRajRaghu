<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_medical_app" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.medical.app</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="km_home_work" position="after">
                <field name="medical_license" />
                <field name="ml_issue" />
                <field name="ml_expiry" />
            </field>
            <field name="pin" position="attributes">
                <attribute name="password">True</attribute>
            </field>
        </field>
    </record>
</odoo>
